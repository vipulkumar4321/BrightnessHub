<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewBrightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Adjust Brightness"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBarBrightness"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/ButtonSun"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="180dp"
        android:onClick="sunClicked"
        app:srcCompat="@drawable/sun" />

    <ImageButton
        android:id="@+id/ButtonMoon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="180dp"
        android:onClick="moonClicked"
        app:srcCompat="@drawable/moon" />

    <ImageButton
        android:id="@+id/ButtonCloud"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="180dp"
        android:onClick="cloudyClicked"
        app:srcCompat="@drawable/cloudy" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="320dp"
        android:onClick="autoClicked"
        app:srcCompat="@drawable/auto" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="320dp"
        android:onClick="energyClicked"
        app:srcCompat="@drawable/energy" />


</RelativeLayout>